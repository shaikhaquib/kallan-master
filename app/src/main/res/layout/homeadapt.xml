<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_margin="@dimen/activity_vertical_margin">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/ic_icons8_user_80"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="7"
                android:layout_marginLeft="@dimen/activity_vertical_margin">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kolkata Knight Riders"
                    android:textSize="@dimen/activity_vertical_margin"
                    android:textColor="@android:color/black"
                    android:id="@+id/campaignName"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:id="@+id/campStartdate"
                    android:text="Start Date : 5 April 2018"
                    />

            </LinearLayout>
            

            <TextView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:text="1 \n Month"
                android:gravity="center"
                android:background="@drawable/circle"
                android:textColor="@android:color/white"/>



        </LinearLayout>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:id="@+id/campaignimage"
            android:src="@drawable/banner"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="Mumbai"
            android:textColor="@android:color/tertiary_text_dark"
            android:layout_marginLeft="@dimen/activity_vertical_margin"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/activity_vertical_margin"
            android:id="@+id/campPurpose"
            android:layout_marginTop="4dp"
            android:text="You can earn upto â‚¹ 5000 for this campaign"
            android:textColor="@android:color/tertiary_text_dark"
            android:layout_marginLeft="@dimen/activity_vertical_margin"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/activity_vertical_margin">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                app:srcCompat="@drawable/ic_favorite"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                app:srcCompat="@drawable/ic_forward_arrow"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:gravity="center"
                android:textSize="@dimen/activity_vertical_margin"
                android:textColor="@android:color/holo_red_dark"
                android:text="Browse Campaigns"/>

        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>